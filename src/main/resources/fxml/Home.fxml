<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox prefHeight="900.0" prefWidth="500.0" style="-fx-background-color: #2f3437;" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Home">
    <children>
        <AnchorPane>
            <children>
                <Label text="Jira配置" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="36.0"/>
                    </font>
                </Label>
                <Label fx:id="msg" alignment="TOP_LEFT" style="-fx-background-color: #2eaadc;" text="提示信息"
                       textFill="WHITE" visible="false" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="4.0">
                    <font>
                        <Font name="System Bold Italic" size="14.0"/>
                    </font>
                    <padding>
                        <Insets bottom="10.0" left="50.0" right="50.0" top="10.0"/>
                    </padding>
                </Label>
            </children>
        </AnchorPane>
        <Label text="Jira Url:" textFill="WHITE">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </Label>
        <TextField fx:id="jiraUrl" focusTraversable="false"/>
        <Label text="用户名:" textFill="WHITE">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </Label>
        <TextField fx:id="jiraUsername" focusTraversable="false"/>
        <Label text="密码:" textFill="WHITE">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </Label>
        <PasswordField fx:id="jiraPassword" focusTraversable="false"/>
        <Label text="Jql:" textFill="WHITE">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </Label>
        <TextArea fx:id="jiraJql" focusTraversable="false" prefHeight="46.66" wrapText="true"/>
        <Button fx:id="jira_save_but" cache="true" focusTraversable="false" mnemonicParsing="false"
                onAction="#jira_save" prefWidth="100.0" text="保存">
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
            <font>
                <Font name="System Italic" size="18.0"/>
            </font>
        </Button>
        <Separator cache="true">
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </Separator>
        <Label text="Notion配置" textFill="WHITE">
            <font>
                <Font name="System Bold" size="36.0"/>
            </font>
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </Label>
        <Label text="Token:" textFill="WHITE">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </Label>
        <TextField fx:id="notionToken" focusTraversable="false"/>
        <Label text="Database ID:" textFill="WHITE">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </Label>
        <TextField fx:id="notionDatabaseId" focusTraversable="false"/>
        <Button fx:id="notion_save_but" cache="true" focusTraversable="false" mnemonicParsing="false"
                onAction="#notion_save" prefWidth="100.0" text="保存">
            <font>
                <Font name="System Italic" size="18.0"/>
            </font>
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </Button>
        <Separator cache="true">
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </Separator>
        <Label text="运行配置" textFill="WHITE">
            <font>
                <Font name="System Bold" size="36.0"/>
            </font>
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </Label>
        <Label fx:id="time" text="更新数据频率:" textFill="WHITE">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </Label>
        <Slider fx:id="slider" blockIncrement="60.0" focusTraversable="false" majorTickUnit="10.0" max="120.0"
                min="10.0" minorTickCount="0" showTickLabels="true" showTickMarks="true"/>
        <Button fx:id="start" focusTraversable="false" mnemonicParsing="false" onAction="#start" prefWidth="460.0"
                text="启动">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </Button>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</VBox>
